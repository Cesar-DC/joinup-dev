{
    "name": "ec-europa/joinup",
    "description": "Joinup is a collaborative platform created by the European Commission and funded by the European Union via the Interoperability Solutions for European Public Administrations (ISA) Programme. It offers several services that aim to help e-Government professionals share their experience with each other.",
    "type": "project",
    "license": "EUPL",
    "require": {
        "composer/composer": "^1.0@alpha",
        "composer/installers": "^1.0.20",
        "continuousphp/aws-sdk-phing": "~0.1",
        "cweagans/composer-patches": "~1.0",
        "drupal/console": "~0.10",
        "drupal/core": "~8.0.3",
        "drupal/og": "dev-port-og-complex-widget-test",
        "drupal/og_menu": "dev-8.x-1.x",
        "drupal/phing-drush-task": "1.0",
        "drupal/r4032login": "dev-8.x-1.x",
        "drupal/search_api": "~8.1.0-alpha12",
        "drush/drush": "~8.0",
        "easyrdf/easyrdf": "dev-0.9.x as 0.9.1",
        "pear/console_table": "~1.3.0",
        "phing/phing": "~2.10",
        "php": ">=5.5.9",
        "typhonius/behattask": "1.0"
    },
    "require-dev": {
        "behat/mink": "~1.6",
        "behat/mink-goutte-driver": "~1.2",
        "drupal/coder": "dev-8.x-2.x",
        "drupal/config_devel": "dev-8.x-1.x",
        "drupal/config_update": "dev-8.x-1.x",
        "drupal/devel": "dev-8.x-1.x",
        "drupal/drupal-extension": "dev-master",
        "jcalderonzumba/gastonjs": "^1.1@dev",
        "jcalderonzumba/mink-phantomjs-driver": "dev-master#10d7c48c9a4129463052321b52450d98983c4332",
        "mikey179/vfsStream": "~1.2",
        "pfrenssen/phpcs-pre-push": "1.0",
        "phpunit/phpunit": "~4.8",
        "symfony/css-selector": "2.7.*"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Drupal\\joinup\\": "tests/src",
            "DrupalProject\\": "src"
        }
    },
    "scripts": {
        "post-install-cmd": "sh ./scripts/composer/post-install.sh"
    },
    "extra": {
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/contrib/{$name}": ["type:drupal-drush"]
        },
        "patches": {
            "drupal/core": {
                "Enlarge file_usage entity id length.": "https://www.drupal.org/files/issues/drupal-enlarge_file_usage_table-2675600.patch"
            },
            "drupal/search_api": {
                "Issue #2671228: Support for non Numeric IDs": "https://www.drupal.org/files/issues/support_for_non_numeric-2671228-2_1.patch"
            }
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packagist.drupal-composer.org"
        },
        {
            "type": "vcs",
            "url": "https://git.drupal.org/project/coder.git"
        },
        {
            "type": "package",
            "package": {
                "name": "drupal/phing-drush-task",
                "version": "1.0",
                "source": {
                    "url": "https://git.drupal.org/project/phingdrushtask.git",
                    "type": "git",
                    "reference": "7.x-1.0"
                },
                "autoload": { "classmap": [ "DrushTask.php" ] },
                "include-path": [ "." ]
            }
        },
        {
            "type": "package",
            "package": {
                "name": "typhonius/behattask",
                "version": "1.0",
                "source": {
                    "url": "https://gist.github.com/5719e15be9687ff7c138.git",
                    "type": "git",
                    "reference": "0ea666882cba3099dfa4feeb02e1bb85b2c0bde9"
                },
                "autoload": { "classmap": [ "BehatTask.php" ] },
                "include-path": [ "." ]
            }
        },
        {
            "type": "package",
            "package": {
                "name": "pfrenssen/phpcs-pre-push",
                "version": "1.0",
                "type": "git-hook",
                "source": {
                    "url": "https://gist.github.com/498fc52fea3f965f6640.git",
                    "type": "git",
                    "reference": "master"
                }
            }
        },
        {
            "_comment": "Amitai's fork is the main development repository for Organic Groups. Remove this once a D8 release is made on drupal.org.",
            "type": "vcs",
            "url": "git@github.com:amitaibu/og"
        },
        {
            "_comment": "Current development is done in our own repository.",
            "type": "vcs",
            "url": "git@github.com:ec-europa/og_menu"
        },
        {
            "type": "package",
            "package": {
                "name": "easyrdf/easyrdf",
                "version": "dev-0.9.x",
                "source": {
                    "url": "https://github.com/ec-europa/easyrdf.git",
                    "type": "git",
                    "reference": "0.9.x"
                },
                "autoload": {
                    "psr-0": {
                        "EasyRdf_": "lib/"
                    }
                }
            }
        }
    ]
}
