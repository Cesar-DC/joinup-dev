{#
/**
 * @ingroup themeable
 */
#}

{%
  set classes = [
    'inline-social-media',
  ]
%}

<ul{{ attributes.addClass(classes) }}>
  {% for platform in platforms %}
    <li class="inline-social-media__item">
      <a href="{{ platform.url }}" {{ platform.attributes.addClass('inline-social-media__link').setAttribute('alt', platform.name).setAttribute('title', platform.name).setAttribute('target', '_blank') }} >
        <span class="icon icon--{{ platform.id }}"></span>
        {% if appearance.show_name %}
          <span class="visually-hidden">{{ platform.name }}</span>
        {% endif %}
      </a>
    </li>
  {% endfor %}
</ul>
