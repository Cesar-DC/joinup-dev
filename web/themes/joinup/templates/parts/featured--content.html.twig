<div class="section section--featured">
  <div class="featured" style = "background-image: url('{{ banner_url }}');">
    <div class="featured__overlay"></div>
    <div class="featured__wrapper">
      <div class="featured__logo">
        {{ logo }}
      </div>
      <h1 class="featured__text">{{ featured_title }}</h1>
      {% if is_collection %}
        {% include directory ~ '/templates/parts/featured--collection.html.twig' %}
      {% elseif is_solution %}
        {% include directory ~ '/templates/parts/featured--solution.html.twig' %}
      {% endif %}
      {{ page.featured}}
    </div>
  </div>
</div>
