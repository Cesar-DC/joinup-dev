{#
/**
 * @file
 * Tile view for rdf entities.
 */
#}
<div class="listing__item listing__item--tile mdl-cell mdl-cell--4-col">
  <div class="listing__card listing__card--detail-container mdl-card">
    <div class="listing__metadata">
      <div class="listing__field">
        <div class="listing__title">{{ content.field_ad_file }}</div>
      </div>
      <div class="listing__field">
        <div class="label gray">{{ 'Weight'|t }}:</div>
        <div class="value bold">{{ content.field_ad_file_size }}</div>
      </div>
      <div class="listing__field">
        <div class="label gray">OS:</div>
        <div class="value bold underline">Linux</div>
      </div>
      {% if (content.field_ad_licence|render) %}
      <div class="listing__field">
        <div class="label gray">{{ 'Licence'|t }}:</div>
        <div class="value bold underline">{{ content.field_ad_licence }}</div>
      </div>
      {% endif %}
      <div class="listing__action-link__wrapper action-link__wrapper center">
        <a href="{{ url }}" class="listing__action-link action-link">Details</a>
        <a href="/" class="listing__action-link action-link">Download</a>
      </div>
    </div>
  </div>
</div>
