<?php

/**
 * @file
 * Contains joinup_event.module.
 */

use \Drupal\core\Form\FormStateInterface;

/**
 * Implements hook_form_FORM_ID_alter().
 */
function joinup_event_form_node_joinup_event_form_alter(&$form, FormStateInterface $form_state, $form_id) {
  $form['#validate'][] = 'joinup_event_form_default_validate';
}

/**
 * Implements hook_form_FORM_ID_alter().
 */
function joinup_event_form_node_joinup_event_edit_form_alter(&$form, FormStateInterface $form_state, $form_id) {
  $form['#validate'][] = 'joinup_event_form_default_validate';
}

/**
 * Validates the default joinup event form.
 *
 * The validation includes the the short title.
 * The short title field is mandatory and it has to be unique
 * in a global scope among events.
 *
 * @param array $form
 *   The form array.
 * @param \Drupal\core\Form\FormStateInterface $form_state
 *   The form state object.
 */
function joinup_event_form_default_validate(&$form, FormStateInterface $form_state) {
  // Check the short title.
  // Load all document entities with this short title.
  $results = \Drupal::entityQuery('node')
    ->condition('type', 'event')
    ->condition('field_event_short_title', $form_state->getValue('field_event_short_title')[0]['value'])
    ->execute();
  if (!empty(reset($results))) {
    $form_state->setErrorByName('field_event_short_title', t('There is already an event with this short title.'));
  }
}
