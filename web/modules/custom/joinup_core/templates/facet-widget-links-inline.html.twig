<div class="filters filters--horizontal">
  <div{{ attributes.addClass('filter') }}>
    {% if items or active %}
      <div class="filter__term">
        {{ active|safe_join(', ') }}
        <span id="filter-button" class="filter__icon icon icon--arrow-down"></span>
      </div>

      {%- if items -%}
        <ul class="filter__menu mdl-menu mdl-menu--bottom-right mdl-js-menu" for="filter-button">
          {%- for item in items -%}
            {%- set item_attributes = create_attribute({'class': ['facet-item', 'mdl-menu__item']}) -%}
            <li{{ item_attributes }}>{{ item }}</li>
          {%- endfor -%}
        </ul>
      {%- endif -%}
    {%- endif %}
  </div>
</div>
